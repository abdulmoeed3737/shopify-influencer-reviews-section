<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@7/swiper-bundle.min.css" />
<style>
  .swiper {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide img,
  .swiper-slide video {
    width: 100%;
    border-radius: 15px 15px 0 0;
  }
  .swiper-button-next,
  .swiper-button-prev {
    display: flex !important;
    color: #b69a7e;
    background: #0F211E;
    border-radius: 100%;
    padding: 25px;
  }
  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 18px;
    font-weight: 900;
  }

  .slider-card {
    display: flex;
    position: relative;
    flex-direction: column;
    margin: 40px;
    box-shadow: 0 8px 30px 1px;
    border-radius: 15px;
  }

  .slider-card .text {
    padding: 18px;
    font-size: 24px;
    background: #0F211E;
    color: #b69a7e;
    border-radius: 0 0 15px 15px;
  }
  .slider-card .info {
    display: flex;
    position: absolute;
    padding: 10px 0;
    justify-content: center;
    align-items: center;
    gap: 20px;
    width: 100%;
    color: white;
    background: #0f211e8f;
    border-radius: 15px 15px 0 0;
  }
  .slider-card .info img {
    width: 40px;
    height: 40px;
    border-radius: 100%;
  }
</style>
